<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:applicationMauiCouvidoux="clr-namespace:applicationMauiCouvidoux"
             x:Class="applicationMauiCouvidoux.View.PageApiVisuel">
    <ListView x:Name="apiView"
                  
              ItemSelected="ApiView_OnItemSelected"
              RowHeight="70"
              SeparatorColor="Black"> <!-- automatic scroll-->
            <ListView.ItemTemplate>
                <DataTemplate>
                        <ViewCell >
                            <HorizontalStackLayout>
                                <Image Source="{Binding Image}"/>
                                <ScrollView>
                                <VerticalStackLayout>
                                <Label Text="{Binding Name}"
                                       VerticalOptions="Center"/>
                                <Label WidthRequest="250" Text="" IsVisible="{Binding visible}"/>
                                </VerticalStackLayout>
                                </ScrollView>
                            </HorizontalStackLayout>
                        </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
</ContentPage>