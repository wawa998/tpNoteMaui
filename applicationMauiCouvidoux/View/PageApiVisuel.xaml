<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="applicationMauiCouvidoux.View.PageApiVisuel"
             BindingContext="{Binding PageApiVisuelViewModel}">
    <ListView ItemsSource="{Binding Monsters}"
              RowHeight="190"
              ItemTapped="ListView_OnItemTapped"
              SeparatorColor="Black"> <!-- automatic scroll-->
        <ListView.ItemTemplate >
            <DataTemplate>
                <ViewCell >
                    <HorizontalStackLayout Spacing="10" BackgroundColor="DarkGrey"> 
                        <Image HeightRequest="190" WidthRequest="190" Source="{Binding Image}"/>
                        <Label VerticalTextAlignment="Center" Style="{StaticResource SubHeadline}" SemanticProperties.HeadingLevel="Level1" Text="{Binding Name}"/>
                    </HorizontalStackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
