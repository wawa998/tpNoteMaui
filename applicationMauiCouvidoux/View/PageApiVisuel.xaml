<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="applicationMauiCouvidoux.View.PageApiVisuel"
             BindingContext="{Binding PageApiVisuelViewModel}">
    <ListView ItemsSource="{Binding Monsters}"
              RowHeight="190"
              ItemSelected="ListView_OnItemSelected"
              SeparatorColor="Black"> <!-- automatic scroll-->
        <ListView.ItemTemplate >
            <DataTemplate>
                <ViewCell >
                            <HorizontalStackLayout Spacing="10"> 
                                <Image HeightRequest="190" WidthRequest="190" Source="{Binding Image}"/>
                                <Label Text="{Binding Name}"/>
                            </HorizontalStackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>
