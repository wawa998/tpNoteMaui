<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="applicationMauiCouvidoux.View.PageApiAjout"
             BindingContext="{Binding PageApiVisuelViewModel}">
    <ListView ItemsSource="{Binding Monsters}"
              RowHeight="200"
              SeparatorColor="Black"> <!-- automatic scroll-->
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <HorizontalStackLayout >
                        
                        <ScrollView>
                            <VerticalStackLayout>
                                <Image HeightRequest="190" Source="{Binding Image}"/>
                                <Label WidthRequest="200" Text="{Binding Name}"/>
                            </VerticalStackLayout>
                        </ScrollView>
                    </HorizontalStackLayout>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>